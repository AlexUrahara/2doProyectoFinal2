<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paleta_color_fondo"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".AgregarRegistro">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/fondo_azul_00"
        app:cardCornerRadius="25dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/fondo_azul_2"
        android:text="Ingrese Usuario Nuevo"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/text6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Nombre:"
        android:drawableStart="@drawable/ic_user"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/text7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="ContraseÃ±a:"
        android:drawableStart="@drawable/ic_lock"
        android:inputType="textPassword"
        android:textSize="20sp" />
            <EditText
                android:id="@+id/text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Correo:"
                android:drawableStart="@drawable/ic_email"
                android:inputType="textEmailAddress"
                android:textSize="20sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/fondo_azul_3"
        app:cornerRadius="17dp"
        android:text="insertar Nuevo"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

            <TextView
                android:id="@+id/cancelar2"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:gravity="center"
                android:text="Cancelar Registro"
                android:textColor="@color/fondo_azul_1"
                android:textSize="18dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>